@{
    // This page builds on the MenuTemplate page
    Layout = "_MenuTemplate";

    ViewData["PageTitle"] = "Home";

    ViewData["PageHeading"] = "SHALLOW BLUE - HOME";
}
@* Top row of icons *@
<div class="row">
    <div class="col-sm-3"></div>

    @* Login/logout button *@
    @if ((bool)ViewData["LoggedIn"] == false)
    {
        <div class="col-sm-3" style="text-align: center">
            <a class="btn splash_button-background" asp-controller="Menu" asp-action="Login"><i class="fas fa-sign-in-alt SplashPage-Clickable-Icon"></i></a>
            <br />
            <p>Log In</p>
        </div>
    }
    else
    {
        <div class="col-sm-3" style="text-align: center">
            <a class="btn splash_button-background" asp-controller="Menu" asp-action="Logout"><i class="fas fa-sign-out-alt SplashPage-Clickable-Icon"></i></a>
            <br />
            <p>Logout</p>
        </div>
    }

    @* Profile button *@
    <div class="col-sm-3" style="text-align: center">
        @if ((bool)ViewData["Admin"] == false)
        {
            <a class="btn splash_button-background" asp -controller="Menu" asp-action="Profile"><i class="fas fa-address-book SplashPage-Clickable-Icon"></i></a>
        }
        else
        {
            <a class="btn splash_button-background" asp -controller="Menu" asp-action="AdminMenu"><i class="fas fa-address-book SplashPage-Clickable-Icon"></i></a>
        }
        <br />
        @if ((bool)ViewData["Admin"] == false)
        {
            <p>Profile</p>
        }
        else
        {
            <p>Admin Menu</p>
        }
    </div>

    <div class="col-sm-3"></div>
</div>

    @* Bottom row of icons *@
<div class="row">
    <div class="col-sm-3"></div>

    @* Spectate bitton *@
    <div class="col-sm-3" style="text-align: center">
        <a class="splash_button-background" sp-controller="Menu" asp-action="Spectate"><i class="fas fa-binoculars SplashPage-Clickable-Icon"></i></a>
        <br />
        <p>Spectate</p>
    </div>

    @* Join button *@
    <div class="col-sm-3" style="text-align: center">
        <a class="splash_button-background" sp-controller="Menu" asp-action="Join"><i class="fas fa-calendar-alt SplashPage-Clickable-Icon"></i></a>
        <br />
        <p>Join</p>
    </div>

    <div class="col-sm-3"></div>
</div>